{
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": ["es2019"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "declaration": true,

    "noErrorTruncation": true,
    "noImplicitOverride": true,

    "strictNullChecks": true
  },
  "include": ["./src", "./typings/*.d.ts", "./node_modules/@adonisjs/**/*.d.ts"],
  "types": [
    "@adonisjs/http-server",
    "@adonisjs/core",
  ],
}
